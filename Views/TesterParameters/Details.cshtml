@model TesterParameter


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Search Device</h3>

<form asp-controller="TesterParameters" asp-action="Main" method="get">
    <div class="row">
        <div class="col-md-3">
            <input type="text" name="name" class="form-control" value="@Model?.DeviceName" />
        </div>

        <div class="col-md-2">
            <input type="submit" value="Search" class="btn btn-info" />

            <a asp-controller="TesterParameters" asp-action="Create" class="btn btn-primary" style="margin-left: 15px;">Create</a>
        </div>
        <br />
    </div>
    <div class="col-md-3">
        <div class="alert-danger">
            @if (ViewBag.ErrorMessage != null)
            {@ViewBag.ErrorMessage}
        </div>
    </div>
</form>

<br />
@if (Model != null)
{
    <div class="row">
        <div class="col-md-12">
            <h3>Details for @Model.DeviceName, Revision @Model.Revision</h3>
            <a asp-controller="TesterParameters"
               asp-action="UpdateBS"
               asp-route-id="@Model.Id"
               asp-route-devicename="@Model.DeviceName"
               asp-route-revision="@Model.Revision"
               class="btn btn-primary">
                Update BuildSheet
            </a>
            @if (!string.IsNullOrEmpty(ViewBag.AddBuildSheetConfirmation))
            {
                <div class="row">
                    <div col-md-12">
                        <div class="form-control text-center">
                            <b>@ViewBag.AddBuildSheetConfirmation</b>
                        </div>
                    </div>
                </div>
            }
