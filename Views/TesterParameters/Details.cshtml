                <thead>
                    <tr>
                        <th width="40%">
                            Name
                        </th>
                        <th width="40%">
                            Parameter
                        </th>
                        @if (ViewBag.isEditable)
                        {
                            <th width="20%"></th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.TesterParameterCode?.DeviceParameters?.Parameters != null)
                    {
                        int index = 0;
                        @foreach (var param in Model.TesterParameterCode.DeviceParameters.Parameters)
                        {
                            <tr>
                                <td>
                                    @param.Name
                                </td>
                                <td>
                                    @param.InnerText
                                </td>
                                @if (ViewBag.isEditable)
                                {
                                    <td>
                                        <a asp-controller="TesterParameters"
                                           asp-action="Edit"
                                           asp-route-id="@Model.Id"
                                           asp-route-type="@TesterParameterCodeType.DeviceParameters"
                                           asp-route-parameterName="@param.Name"
                                           asp-route-parameterValue="@param.InnerText"
                                           asp-route-revision="@Model.Revision"
                                           asp-route-index="@index">
                                            Edit
                                        </a> |
                                        <a asp-controller="TesterParameters"
                                           asp-action="Delete"
                                           asp-route-id="@Model.Id"
                                           asp-route-type="@TesterParameterCodeType.DeviceParameters"
                                           asp-route-parameterName="@param.Name"
                                           asp-route-parameterValue="@param.InnerText"
                                           asp-route-revision="@Model.Revision"
                                           asp-route-index="@index">
                                            Delete
                                        </a>
                                    </td>
                                }
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2">
                                No records found!!
                            </td>
                        </tr>
                    }
                    <tr>
                        <td></td>
                        <td></td>
                        @if (ViewBag.isEditable)
