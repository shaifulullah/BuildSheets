@model EditTesterParameter

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure to delete this parameter from @ViewBag.DeviceName ?</h3>
<div>

    <div class="row">
        <div class="col-md-4">
            <table class="table">
                <tr>
                    <th>
                        Parameter Name
                    </th>
                    <td>
                        @Model.ParameterName
                    </td>
                </tr>
                <tr>
                    <th>
                        Parameter Value
                    </th>
                    <td>
                        @Model.ParameterValue
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Type" />
        <input type="hidden" asp-for="ParameterName" />
        <input type="hidden" asp-for="Index" />
        <input type="hidden" asp-for="ParameterValue" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="TesterParameters" asp-action="Details" asp-route-name="@ViewBag.DeviceName">Back to Details</a>
    </form>
</div>



































